<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="center" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="homework.Lesson6.client.Controller">

    <TextArea fx:id="textArea" editable="false" VBox.vgrow="ALWAYS" />
    <HBox>
        <TextField fx:id="textField" onAction="#sendMsg" promptText="Введите текст" HBox.hgrow="ALWAYS">
         <tooltip>
            <Tooltip text="Введите &quot;/end&quot; для выхода из чата" wrapText="true">
               <font>
                  <Font size="12.0" />
               </font></Tooltip>
         </tooltip></TextField>
        <Button fx:id="btn1" onAction="#sendMsg" text="Send" />
    </HBox>
</VBox>
